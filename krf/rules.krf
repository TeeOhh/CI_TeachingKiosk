;; One is a member of a research lab/group if their advisor is
(<== (nuGroupMember ?group ?person)
	(groundExpression ?person)
	(advisorOf ?person ?advisor)
	(nuGroupMember ?group ?advisor))

(<== (nuGroupMember ?group ?person)
	(groundExpression ?group)
	(nuGroupMember ?group ?advisor)
	(advisorOf ?person ?advisor))

